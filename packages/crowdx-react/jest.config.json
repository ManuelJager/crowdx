{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "./src/tests",
  "testRegex": ".test.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFiles": [
    "<rootDir>/setup.ts"
  ],
  "coverageDirectory": "<rootDir>/../../coverage",
  "testEnvironment": "node",
  "coveragePathIgnorePatterns": [
    "<rootDir>"
  ]
}
